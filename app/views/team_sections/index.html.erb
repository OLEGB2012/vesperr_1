<p id="notice"><%= notice %></p>

<h1>Team Sections</h1>

<table>
  <thead>
    <tr>
      <th>Section</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_sections.each do |team_section| %>
      <tr>
        <td><%= team_section.section %></td>
        <td><%= team_section.description %></td>
        <td><%= link_to 'Show', team_section %></td>
        <td><%= link_to 'Edit', edit_team_section_path(team_section) %></td>
        <td><%= link_to 'Destroy', team_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

