<p id="notice"><%= notice %></p>

<h1>Portfolio Items</h1>

<table>
  <thead>
    <tr>
      <th>Portfolio section</th>
      <th>Position</th>
      <th>Portfolio category</th>
      <th>Client name</th>
      <th>Project date</th>
      <th>Project url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolio_items.each do |portfolio_item| %>
      <tr>
        <td><%= portfolio_item.portfolio_section %></td>
        <td><%= portfolio_item.position %></td>
        <td><%= portfolio_item.portfolio_category %></td>
        <td><%= portfolio_item.client_name %></td>
        <td><%= portfolio_item.project_date %></td>
        <td><%= portfolio_item.project_url %></td>
        <td><%= portfolio_item.description %></td>
        <td><%= link_to 'Show', portfolio_item %></td>
        <td><%= link_to 'Edit', edit_portfolio_item_path(portfolio_item) %></td>
        <td><%= link_to 'Destroy', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

