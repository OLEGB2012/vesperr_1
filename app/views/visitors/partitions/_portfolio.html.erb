<!-- ======= Portfolio Section ======= -->
<section id="<%= anchor_link(section_name) %>" class="portfolio">
  <div class="container">

    <div class="section-title" data-aos="fade-up">
      <h2><%= @portfolio_header %></h2>
      <p><%= @portfolio_section.description %></p>
    </div>

    <div class="row" data-aos="fade-up" data-aos-delay="200">
      <div class="col-lg-12 d-flex justify-content-center">
        <ul id="portfolio-flters">
          <li data-filter="*" class="filter-active">All</li>
          <% @portfolio_categories.each do |item| %>
            <li data-filter=".filter-<%= item.name.downcase %>"><%= item.name %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="400">
      <% @portfolio_items.each do |item| %>
        <div class="col-lg-4 col-md-6 portfolio-item filter-<%= item.portfolio_category.name.downcase %>">
          <div class="portfolio-wrap">
            <%= image_tag("portfolio/portfolio-#{item.position}.jpg", class: 'img-fluid', alt: '') %>
            <div class="portfolio-info">
              <h4><%= item.title %></h4>
              <p><%= item.portfolio_category.name.downcase %></p>
              <div class="portfolio-links">
                <%= link_to asset_path("portfolio/portfolio-#{item.position}.jpg"), { data: {gall: "portfolioGallery"}, class: "venobox", title: item.title } do %>
                  <i class="bx bx-plus"></i>
                <% end %>
                <a href="portfolio-details.html" title="More Details"><i class="bx bx-link"></i></a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section> <!-- End Portfolio Section -->