<!-- ======= F.A.Q Section ======= -->
<section id="<%= anchor_link(section_name) %>" class="faq">
  <div class="container">
    <div class="section-title" data-aos="fade-up">
      <h2><%= @faq_header %></h2>
      <p><%= @faq_section.description %></p>
    </div>
    <% @faq_items.each do |item| %>
      <div class="row faq-item d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="<%= item.position*100 %>">
        <div class="col-lg-5">
          <i class="ri-question-line"></i>
          <h4><%= item.question %></h4>
        </div>
        <div class="col-lg-7">
          <p>
            <%= item.answer %>
          </p>
        </div>
      </div><!-- End F.A.Q Item-->
    <% end %>
  </div>
</section> <!-- End F.A.Q Section -->