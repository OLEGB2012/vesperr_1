<!-- ======= Services Section ======= -->
<section id="<%= anchor_link(section_name) %>" class="services">
  <div class="container">

    <div class="section-title" data-aos="fade-up">
      <h2><%= @services_header %></h2>
      <p><%= @services_section.description %></p>
    </div>

    <div class="row">
      <% @horizon_service_items.each do |item| %>
        <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0">
          <div class="icon-box" data-aos="fade-up" data-aos-delay="100">
            <div class="icon"><i class="<%= item.icon_class %>"></i></div>
            <h4 class="title"><a href=""><%= item.header %></a></h4>
            <p class="description"><%= item.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section> <!-- End Services Section -->
<%= render 'visitors/partitions/more_services' %>