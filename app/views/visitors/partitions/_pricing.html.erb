<!-- ======= Pricing Section ======= -->
<section id="<%= anchor_link(section_name) %>" class="pricing">
  <div class="container">
    <div class="section-title">
      <h2><%= @pricing_header %></h2>
      <p><%= @pricing_section.description %></p>
    </div>
    <div class="row">
      <% @pricing_items.each do |item| %>
        <div class="col-lg-4 col-md-6 mt-4">
          <div class="box <%= item.recommended ? 'recommended' : '' %>" data-aos="<%= item.data_aos %>" data-aos-delay="<%= item.data_aos_delay %>">
            <h3><%= item.name %></h3>
            <h4><sup>$</sup><%= item.price %><span> / month</span></h4>
            <ul>
              <%# TODO: Цикл по возможностям тарифа... %>
              <% item.pricing_capabilities.each do |cap| %>
                <li class="<%= cap.status ? '' : 'na' %>" ><%= cap.capability.name %></li>
              <% end %>
            </ul>
            <div class="btn-wrap">
              <a href="#" class="btn-buy"><%= @setting.call_to_action %></a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section> <!-- End Pricing Section -->