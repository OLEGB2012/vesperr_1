<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
  <div class="container">

    <div class="section-title" data-aos="fade-up">
      <h2>Напишите нам</h2>
    </div>

    <div class="row">

      <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
        <div class="contact-about">
          <h3><%= @setting.name %></h3>
          <p>Мы в социальных сетях</p>
          <div class="social-links">
            <a href="<%= @setting.twitter_url %>" class="twitter" target='_blank'><i class="icofont-twitter"></i></a>
            <a href="<%= @setting.facebook_url %>" class="facebook" target='_blank'><i class="icofont-facebook"></i></a>
            <a href="<%= @setting.instagram_url %>" class="instagram" target='_blank'><i class="icofont-instagram"></i></a>
            <a href="<%= @setting.linkedin_url %>" class="linkedin" target='_blank'><i class="icofont-linkedin"></i></a>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6 mt-4 mt-md-0" data-aos="fade-up" data-aos-delay="200">
        <div class="info">
          <div>
            <i class="ri-map-pin-line"></i>
            <p><%= @setting.address %></p>
          </div>

          <div>
            <i class="ri-mail-send-line"></i>
            <p><%= @setting.email %></p>
          </div>

          <div>
            <i class="ri-phone-line"></i>
            <p><%= @setting.phone %></p>
          </div>

        </div>
      </div>

      <div class="col-lg-5 col-md-12" data-aos="fade-up" data-aos-delay="300">
        <%= form_for @contact, url: visitors_submit_contact_form_path, html: { class: "php-email-form", role: "form" } do |f| %>
          <%#= render 'layouts/shared/error_messages', object: f.object %>
          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', id: 'name', name: 'name', placeholder: 'Your Name', data: { rule: 'minlen:4', msg: 'Please enter at least 4 chars'} %>
            <div class="validate"></div>
          </div>
          <div class="form-group">
            <%= f.text_field :email, class: 'form-control', id: 'email', name: 'email', placeholder: 'Your Email', data: { rule: 'email', msg: 'Please enter a valid email'} %>
            <div class="validate"></div>
          </div>
          <div class="form-group">
            <%= f.text_field :subject, class: 'form-control', id: 'subject', name: 'subject', placeholder: 'Subject', data: { rule: 'minlen:4', msg: 'Please enter at least 8 chars of subject'} %>
            <div class="validate"></div>
          </div>
          <div class="form-group">
            <%= f.text_area :message, class: 'form-control', name: 'message', placeholder: 'Message', rows: 5, data: { rule: 'required', msg: 'Please write something for us'} %>
            <div class="validate"></div>
          </div>
          <div class="mb-3">
            <div class="loading">Loading</div>
            <div class="error-message"></div>
            <div class="sent-message">Your message has been sent. Thank you!</div>
          </div>
          <div class="text-center">
            <button type="submit">Send Message</button>
            <button type="reset">Reset</button>
          </div>
        <% end %>
      </div>

    </div>

  </div>
</section><!-- End Contact Section -->