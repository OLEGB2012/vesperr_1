<p id="notice"><%= notice %></p>

<h1>Pricing Capabilities</h1>

<table>
  <thead>
    <tr>
      <th>Pricing item</th>
      <th>Position</th>
      <th>Capability</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pricing_capabilities.each do |pricing_capability| %>
      <tr>
        <td><%= pricing_capability.pricing_item %></td>
        <td><%= pricing_capability.position %></td>
        <td><%= pricing_capability.capability %></td>
        <td><%= pricing_capability.status %></td>
        <td><%= link_to 'Show', pricing_capability %></td>
        <td><%= link_to 'Edit', edit_pricing_capability_path(pricing_capability) %></td>
        <td><%= link_to 'Destroy', pricing_capability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

