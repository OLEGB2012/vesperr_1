<p id="notice"><%= notice %></p>

<h1>Settings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slogan basic</th>
      <th>Slogan additional</th>
      <th>Get started</th>
      <th>Call to action</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter url</th>
      <th>Facebook url</th>
      <th>Instagram url</th>
      <th>Linkedin url</th>
      <th>Privacy policy</th>
      <th>Terms of use</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.name %></td>
        <td><%= setting.slogan_basic %></td>
        <td><%= setting.slogan_additional %></td>
        <td><%= setting.get_started %></td>
        <td><%= setting.call_to_action %></td>
        <td><%= setting.address %></td>
        <td><%= setting.email %></td>
        <td><%= setting.phone %></td>
        <td><%= setting.twitter_url %></td>
        <td><%= setting.facebook_url %></td>
        <td><%= setting.instagram_url %></td>
        <td><%= setting.linkedin_url %></td>
        <td><%= setting.privacy_policy %></td>
        <td><%= setting.terms_of_use %></td>
        <td><%= setting.active %></td>
        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Setting', new_setting_path %>
